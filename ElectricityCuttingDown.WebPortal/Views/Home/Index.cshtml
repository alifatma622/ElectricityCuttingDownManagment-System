@using ElectricityCuttingDown.WebPortal.Models.ViewModels
@model DashboardViewModel

@{
    ViewData["Title"] = "Dashboard";
}

<div class="space-y-6">
    <!-- Header -->
    <div class="flex items-center justify-between">
        <h1 class="text-3xl font-bold">Dashboard</h1>
        <div class="text-sm text-gray-400">
            Last updated: @DateTime.Now.ToString("yyyy-MM-dd HH:mm:ss")
        </div>
    </div>

    <!-- Stats Grid -->
    <div class="grid grid-cols-1 md:grid-cols-4 gap-6">
        <!-- Total Incidents -->
        <div class="bg-dark border border-dark rounded-lg p-6 hover:border-gray-500 transition">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-gray-400 text-sm font-medium">Total Incidents</p>
                    <p class="text-4xl font-bold text-white mt-2">@Model.TotalIncidents</p>
                </div>
                <div class="bg-blue-900/30 p-4 rounded-lg">
                    <span class="text-3xl">📊</span>
                </div>
            </div>
        </div>

        <!-- Open Incidents -->
        <div class="bg-dark border border-dark rounded-lg p-6 hover:border-gray-500 transition">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-gray-400 text-sm font-medium">Open</p>
                    <p class="text-4xl font-bold text-red-400 mt-2">@Model.OpenIncidents</p>
                </div>
                <div class="bg-red-900/30 p-4 rounded-lg">
                    <span class="text-3xl">⚠️</span>
                </div>
            </div>
        </div>

        <!-- Closed Incidents -->
        <div class="bg-dark border border-dark rounded-lg p-6 hover:border-gray-500 transition">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-gray-400 text-sm font-medium">Closed</p>
                    <p class="text-4xl font-bold text-green-400 mt-2">@Model.ClosedIncidents</p>
                </div>
                <div class="bg-green-900/30 p-4 rounded-lg">
                    <span class="text-3xl">✅</span>
                </div>
            </div>
        </div>

        <!-- Ignored -->
        <div class="bg-dark border border-dark rounded-lg p-6 hover:border-gray-500 transition">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-gray-400 text-sm font-medium">Ignored</p>
                    <p class="text-4xl font-bold text-gray-400 mt-2">@Model.IgnoredIncidents</p>
                </div>
                <div class="bg-gray-700/30 p-4 rounded-lg">
                    <span class="text-3xl">🔇</span>
                </div>
            </div>
        </div>
    </div>

    <!-- Recent Incidents -->
    <div class="bg-dark border border-dark rounded-lg p-6">
        <h2 class="text-xl font-semibold mb-4">Recent Incidents</h2>
        <div class="overflow-x-auto">
            <table class="w-full">
                <thead>
                    <tr class="border-b border-dark">
                        <th class="px-4 py-3 text-left text-gray-400 text-sm font-medium">ID</th>
                        <th class="px-4 py-3 text-left text-gray-400 text-sm font-medium">Source</th>
                        <th class="px-4 py-3 text-left text-gray-400 text-sm font-medium">Created</th>
                        <th class="px-4 py-3 text-left text-gray-400 text-sm font-medium">Status</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var incident in Model.RecentIncidents)
                    {
                        <tr class="border-b border-dark hover:bg-gray-800/50">
                            <td class="px-4 py-3 text-white font-mono">@incident.Cutting_Down_Incident_ID</td>
                            <td class="px-4 py-3 text-gray-300">@incident.Channel</td>
                            <td class="px-4 py-3 text-gray-400 text-sm">@incident.ActualCreateDate.ToString("dd/MM/yyyy HH:mm")</td>
                            <td class="px-4 py-3">
                                @if (incident.ActualEndDate == null)
                                {
                                    <span class="px-3 py-1 bg-red-900 text-red-300 rounded-full text-xs font-semibold">Open</span>
                                }
                                else
                                {
                                    <span class="px-3 py-1 bg-green-900 text-green-300 rounded-full text-xs font-semibold">Closed</span>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <div class="mt-4">
            <a href="/Incident/Search" class="btn-primary">View All Incidents</a>
        </div>
    </div>
</div>
