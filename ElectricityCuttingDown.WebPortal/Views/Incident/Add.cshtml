@model CreateIncidentViewModel

@{
    ViewData["Title"] = "Add Cutting Incident";
}

<div class="min-h-screen bg-gradient-to-br from-gray-900 via-gray-800 to-gray-900 py-12">
    <div class="max-w-2xl mx-auto px-6">

        <!-- Header -->
        <div class="mb-8">
            <div class="flex items-center justify-between mb-2">
                <h1 class="text-4xl font-bold text-white">Add New Incident</h1>
                <a href="/Incident/Search" class="px-4 py-2 bg-gray-700 hover:bg-gray-600 text-gray-200 rounded-lg transition text-sm font-medium">
                    ← Back
                </a>
            </div>
            <p class="text-gray-400">Report a new electricity cutting incident to the system</p>
        </div>

        <!-- Success Message -->
        @if (TempData["Success"] != null)
        {
            <div id="successAlert" class="mb-6 p-4 bg-gradient-to-r from-green-900/30 to-green-800/30 border border-green-500/50 rounded-lg backdrop-blur-sm">
                <div class="flex items-start gap-4">
                    <div class="flex-shrink-0">
                        <div class="flex items-center justify-center h-10 w-10 rounded-lg bg-green-500/20">
                            <svg class="h-6 w-6 text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                            </svg>
                        </div>
                    </div>
                    <div class="flex-1">
                        <h3 class="text-green-300 font-semibold">Success!</h3>
                        <p class="text-green-200/80 text-sm mt-1">@TempData["Success"]</p>
                    </div>
                </div>
            </div>
        }

        <!-- Error Messages -->
        @if (!ViewData.ModelState.IsValid && ViewData.ModelState.Any(x => x.Value.Errors.Count > 0))
        {
            <div class="mb-6 p-4 bg-gradient-to-r from-red-900/30 to-red-800/30 border border-red-500/50 rounded-lg backdrop-blur-sm">
                <div class="flex items-start gap-4">
                    <div class="flex-shrink-0">
                        <div class="flex items-center justify-center h-10 w-10 rounded-lg bg-red-500/20">
                            <svg class="h-6 w-6 text-red-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4v.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                            </svg>
                        </div>
                    </div>
                    <div class="flex-1">
                        <h3 class="text-red-300 font-semibold">Validation Errors</h3>
                        <ul class="text-red-200/80 text-sm mt-2 space-y-1">
                            @foreach (var modelState in ViewData.ModelState.Values)
                            {
                                @foreach (var error in modelState.Errors)
                                {
                                    <li>• @error.ErrorMessage</li>
                                }
                            }
                        </ul>
                    </div>
                </div>
            </div>
        }

        <!-- Form Card -->
        <div class="bg-gray-800/50 border border-gray-700/50 backdrop-blur-sm rounded-2xl p-8 shadow-2xl">
            <form method="post" class="space-y-6">
                @Html.AntiForgeryToken()

                <!-- Source Type -->
                <div class="space-y-2">
                    <label class="block text-sm font-semibold text-gray-200">
                        Source Type <span class="text-red-400">*</span>
                    </label>
                    <select asp-for="SourceType" class="w-full px-4 py-3 bg-gray-700/50 border border-gray-600 rounded-lg text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition" required>
                        <option value="">Select source type...</option>
                        <option value="A">Source A — Cabins</option>
                        <option value="B">Source B — Cables</option>
                    </select>
                    <span asp-validation-for="SourceType" class="text-red-400 text-sm"></span>
                </div>

                <!-- Resource Key -->
                <div class="space-y-2">
                    <label class="block text-sm font-semibold text-gray-200">
                        Resource Key <span id="resourceLabel" class="text-gray-400">(Cabin Key)</span> <span class="text-red-400">*</span>
                    </label>
                    <input type="number" asp-for="ResourceKey" placeholder="Enter resource key..."
                           class="w-full px-4 py-3 bg-gray-700/50 border border-gray-600 rounded-lg text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition"
                           required min="1" />
                    <span asp-validation-for="ResourceKey" class="text-red-400 text-sm"></span>
                    <p class="text-gray-400 text-xs">For Source A: Cabin Key | For Source B: Cable Key</p>
                </div>

                <!-- Problem Type -->
                <div class="space-y-2">
                    <label class="block text-sm font-semibold text-gray-200">
                        Problem Type <span class="text-red-400">*</span>
                    </label>
                    <select asp-for="ProblemTypeKey" class="w-full px-4 py-3 bg-gray-700/50 border border-gray-600 rounded-lg text-white focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition" required>
                        <option value="">Select problem type...</option>
                        <option value="1">Fire</option>
                        <option value="2">High Pressure</option>
                        <option value="3">High Consumption</option>
                        <option value="4">Debt</option>
                        <option value="5">Meter Damage</option>
                        <option value="6">Current Theft</option>
                        <option value="7">Fault</option>
                        <option value="8">Neutral Theft</option>
                        <option value="9">Line Theft</option>
                        <option value="10">Meter Update</option>
                        <option value="11">Maintenance</option>
                        <option value="12">Cable Cut</option>
                        <option value="13">Cable Connection</option>
                    </select>
                    <span asp-validation-for="ProblemTypeKey" class="text-red-400 text-sm"></span>
                </div>

                <!-- Create Date -->
                <div class="space-y-2">
                    <label class="block text-sm font-semibold text-gray-200">
                        Start Date & Time <span class="text-red-400">*</span>
                    </label>
                    <input type="datetime-local" asp-for="CreateDate"
                           class="w-full px-4 py-3 bg-gray-700/50 border border-gray-600 rounded-lg text-white focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition"
                           required />
                    <span asp-validation-for="CreateDate" class="text-red-400 text-sm"></span>
                </div>

                <!-- Checkboxes -->
                <div class="space-y-3 bg-gray-700/30 p-4 rounded-lg border border-gray-600/30">
                    <label class="flex items-center gap-3 text-gray-300 cursor-pointer hover:text-white transition">
                        <input type="checkbox" asp-for="IsPlanned" class="w-4 h-4 rounded bg-gray-600 border-gray-500 text-blue-500 focus:ring-2 focus:ring-blue-500" />
                        <span class="text-sm">Planned Incident</span>
                    </label>
                    <label class="flex items-center gap-3 text-gray-300 cursor-pointer hover:text-white transition">
                        <input type="checkbox" asp-for="IsGlobal" class="w-4 h-4 rounded bg-gray-600 border-gray-500 text-blue-500 focus:ring-2 focus:ring-blue-500" />
                        <span class="text-sm">Global Impact</span>
                    </label>
                </div>

                <!-- Created User -->
                <div class="space-y-2">
                    <label class="block text-sm font-semibold text-gray-200">
                        Created User <span class="text-red-400">*</span>
                    </label>
                    <input type="text" asp-for="CreatedUser" placeholder="Your name or system user..."
                           class="w-full px-4 py-3 bg-gray-700/50 border border-gray-600 rounded-lg text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition"
                           required maxlength="50" />
                    <span asp-validation-for="CreatedUser" class="text-red-400 text-sm"></span>
                </div>

                <!-- Buttons -->
                <div class="flex gap-4 pt-6">
                    <button type="submit" class="flex-1 px-6 py-3 bg-gradient-to-r from-blue-600 to-blue-700 hover:from-blue-700 hover:to-blue-800 text-white font-semibold rounded-lg transition shadow-lg">
                        Create Incident
                    </button>
                    <a href="/Incident/Search" class="flex-1 px-6 py-3 bg-gray-700 hover:bg-gray-600 text-gray-200 font-semibold rounded-lg transition text-center">
                        Cancel
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- JavaScript -->
<script>
    document.addEventListener('DOMContentLoaded', function() {
        // Dynamic label update
        const sourceSelect = document.querySelector('[name="SourceType"]');
        const resourceLabel = document.getElementById('resourceLabel');

        sourceSelect.addEventListener('change', function() {
            if (this.value === 'A') {
                resourceLabel.textContent = '(Cabin Key)';
            } else if (this.value === 'B') {
                resourceLabel.textContent = '(Cable Key)';
            } else {
                resourceLabel.textContent = '(Resource Key)';
            }
        });

        // Auto-hide success message
        const successAlert = document.getElementById('successAlert');
        if (successAlert) {
            setTimeout(function() {
                successAlert.style.transition = 'all 0.5s ease-out';
                successAlert.style.opacity = '0';
                successAlert.style.transform = 'translateY(-20px)';

                setTimeout(function() {
                    successAlert.remove();
                }, 500);
            }, 3000);
        }
    });
</script>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}